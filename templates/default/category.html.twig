{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-4">
            <h4>Filtre TATA!!!!</h4>
            {{ form(form) }}
        </div>
        <div class="col-8">
            This is a list
            <ul>
                {% for product in products %}
                    <li>
                        {{ product.name }}
                        <a class="btn btn-primary" href="{{ url('cart_add',{'product':product.id}) }}">Adauga in cos</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
